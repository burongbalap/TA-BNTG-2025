    <script>
        document.addEventListener('DOMContentLoaded', () => {
            // Temukan semua tombol yang membuka modal
            const openModalButtons = document.querySelectorAll('[data-modal-target]');
            
            // Temukan semua tombol yang menutup modal
            const closeModalButtons = document.querySelectorAll('[data-modal-close]');
            
            // Fungsi untuk membuka modal
            const openModal = (modal) => {
                if (modal == null) return;
                modal.classList.remove('hidden');
            }
            
            // Fungsi untuk menutup modal
            const closeModal = (modal) => {
                if (modal == null) return;
                modal.classList.add('hidden');
            }
            
            // Tambahkan event listener ke setiap tombol "Lihat Detail"
            openModalButtons.forEach(button => {
                button.addEventListener('click', () => {
                    // Ambil ID modal dari atribut 'data-modal-target'
                    const modal = document.querySelector(button.dataset.modalTarget);
                    
                    // (Opsional) Di sini Anda bisa mengubah konten modal
                    // berdasarkan tombol mana yang diklik, tapi untuk
                    // project dummy, kita tampilkan konten yang sama.
                    
                    openModal(modal);
                });
            });

            // Tambahkan event listener ke setiap tombol "Tutup"
            closeModalButtons.forEach(button => {
                button.addEventListener('click', () => {
                    // Temukan modal terdekat
                    const modal = button.closest('.fixed');
                    closeModal(modal);
                });
            });

            // (Opsional) Tutup modal jika mengklik di luar konten modal
            window.addEventListener('click', event => {
                if (event.target.id === 'projectModal') {
                    const modal = document.getElementById('projectModal');
                    closeModal(modal);
                }
            });
        });
    </script>
